#!/usr/bin/env node

import next from 'next'
import { createServer } from 'http'
import fridge from '../'

const dev = process.env.NODE_ENV !== 'production'
const app = next({dev})

app.prepare().then(() => {
  createServer(fridge(app)).listen(3000, err => {
    if (err) throw err
    if (!process.env.NOW) {
      console.log('> Ready on http://localhost:3000')
    }
  })
})
